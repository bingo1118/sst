<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:screenOrientation="landscape"
    android:layout_gravity="center"
    android:background="#80000000" >

    <LinearLayout 
        android:id="@+id/alarm_fk_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alarm_dialog_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:id="@+id/alarm_fk_center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            >
            <ImageView 
                android:id="@+id/alarm_fk_img"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@anim/allarming"
                android:scaleType="center"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/alarm_fk_img"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    >
                    
                    <TextView 
                        android:id="@+id/tv_fk_type"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_large"
	                    android:textColor="@color/text_color_white"
	                    android:text="@string/allarm_type"
	                    />
                </LinearLayout>
                <LinearLayout
					android:id="@+id/alarm_weizhi"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    >
                    <TextView 
                        android:id="@+id/alarm_id_fk_text"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_normal"
	                    android:textColor="@color/text_color_white"
	                    android:text="位置："
	                    />
                    <TextView 
                        android:id="@+id/alarm_type_fk_text"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="2"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_normal"
	                    android:textColor="@color/text_color_white"
	                    android:text="Motion Detection"
	                    />
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    >
                    <TextView 
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_normal"
	                    android:textColor="@color/text_color_white"
	                    android:text="时间："
	                    />
                    <TextView 
                        android:id="@+id/alarm_type_fk_time"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="2"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_normal"
	                    android:textColor="@color/text_color_white"
	                    android:text="Motion Detection"
	                    />
                </LinearLayout>
                <LinearLayout 
		            android:id="@+id/alarm_fk_bottom"
		            android:layout_width="match_parent"
		            android:layout_toRightOf="@+id/alarm_fk_img"
		            android:layout_weight="1"
		            android:layout_height="0dp"
		            android:orientation="vertical"
	            >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView 
                    android:id="@+id/monitor_fk_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
					android:text="@string/check"
					android:textSize="@dimen/text_size_normal"
					android:textColor="@color/text_color_blue"
                    />
                <ImageView 
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_line"
                    />
                <TextView 
                    android:id="@+id/ignore_fk_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
					android:text="@string/ignore"
					android:textSize="@dimen/text_size_normal"
					android:textColor="@color/text_color_blue"
                    />
                <ImageView 
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_line"
                    />
                <TextView 
                    android:id="@+id/shield_fk_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
					android:text="@string/shielded"
					android:textSize="@dimen/text_size_normal"
					android:textColor="@color/text_color_red"
                    />
            </LinearLayout>
        </LinearLayout>
  
            </LinearLayout>
            
            
        </LinearLayout>
        <LinearLayout 
            android:visibility="gone"
            android:id="@+id/layout_area_fk_chanel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alarm_dialog_area_height"
            android:orientation="horizontal"
            >
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                	<TextView 
                	    android:id="@+id/area_fk_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_small"
	                    android:textColor="@color/text_color_white"
	                    android:text="防区：花园"
	                    android:layout_centerInParent="true"
	                    />
                	
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                	<TextView 
                	    android:id="@+id/chanel_fk_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:textSize="@dimen/text_size_small"
	                    android:textColor="@color/text_color_white"
	                    android:text="通道：3号"
	                    android:layout_centerInParent="true"
	                    />
            </RelativeLayout>
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>
